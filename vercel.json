{
  "version": 2,
  "builds": [
    { "src": "/backend", "use": "@vercel/php" },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "/frontend/installation.sh",
      "use": "@vercel/builders/shell"
    },
    {
      "src": "/frontend/start-service.sh",
      "use": "@vercel/builders/shell"
    },
    {
      "src": "/frontend/dist",
      "use": "@vercel/static"
    },
    {
      "src": "/frontend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/backend/index.php" },
    { "src": ".*", "dest": "/frontend/index.html" }
  ]
}
